<div class="u-layout-centerContent u-background-70 u-padding-r-all">
  <section class="u-layout-medium">
    <div class="Grid">
      <div class="Grid-cell u-layout-centerLeft">
        <h2 class="u-text-r-l"><a class="u-color-white" href="">Twitter @amministrazione</a></h2>
      </div>
      <p class="Grid-cell u-layout-centerRight">
        <a title="vai all'account twitter" class="u-color-white u-textClean u-text-xxl" href="">
          <span class="icon icon-twitter" aria-hidden="true"></span>
          <span class="u-hiddenVisually">vai all'account twitter</span>
        </a>
      </p>
    </div>
    <div class="Grid Grid--withGutter u-padding-r-top u-text-r-xxl">
      {% for i in [1, 2, 3] %}
      <div class="Grid-cell usizefull u-md-size1of3 u-lg-size1of3 u-text-r-m u-margin-r-bottom u-layout-matchHeight">
        {% render '@tile--twitter', { text: __TEXTS__[i] | truncate(s, 140, false, end='.')} %}
      </div>
      {% endfor %}
    </div>
  </section>
</div>
