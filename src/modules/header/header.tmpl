{% render '@skiplinks' %}

<header class="Header Headroom--fixed">

  <div class="Header-banner">
    <div class="Header-serviceLink">
      <a href=""><span>Accedi ai </span> servizi</a>
    </div>
    <div class="Header-owner">
      <a href="">Governo Italiano</a>
    </div>
  </div>

  <div class="Header-navbar Grid Grid--alignMiddle">

    <a class="Hamburger-toggleContainer Header-toggle Grid-cell js-fr-offcanvas-open"
      aria-controls="menu" aria-label="accedi al menu" title="navigazione" href="#">
      <span class="Hamburger-toggle"></span>
      <p class="Header-toggleText">Menu</p>
    </a>

    <div class="Header-title">
      <div class="Header-logo">
        <a href="/" tabindex="-1">
          <img src="http://placehold.it/75x80" alt="">
        </a>
      </div>
      <h1>
        <a class="Header-titleLink" accesskey="1" href="/">
          {{ site.name }}<br>
          <small>eventuale sottotitolo</small>
        </a>
      </h1>
      <div class="Header-searchTrigger js-searchTrigger">
        <a href="#header-utils" class="icon-magnifier">
          <span class="u-visuallyHidden">vai alla ricerca</span>
        </a>
      </div>
    </div>

    <div class="Header-utils" id="header-utils">
      <div class="Header-social">
        <p>Seguici su:</p>
        <ul class="Header-socialIcons">
          <li><a href=""><span class="icon-facebook"></span><span class="u-hiddenVisually">Facebook</span></a></li>
          <li><a href=""><span class="icon-twitter"></span><span class="u-hiddenVisually">Twitter</span></a></li>
          <li><a href=""><span class="icon-youtube"></span><span class="u-hiddenVisually">Youtube</span></a></li>
        </ul>
      </div>
      <div class="Header-search">
        {% render '@form--search' %}
      </div>
      <div class="Header-languages">
        <a class="Header-language is-active" href="">ITA</a>
        <a class="Header-language" href="">ENG</a>
      </div>
    </div>

  </div><!-- Header-navbar -->

  <div class="u-textCenter">
    {% if clone %}
      <nav class="Megamenu Megamenu--styled js-megamenu" data-rel=".Offcanvas .Treeview"></nav>
    {% else %}
      {% render '@megamenu' %}
    {% endif %}
  </div>

</header>

<div class="Offcanvas Offcanvas--left Offcanvas--modal js-fr-offcanvas" id="menu">
  <div class="Offcanvas-content u-background-white">
    <div class="Offcanvas-toggleContainer u-padding-bottom-l u-background-70">
      <button class="Hamburger-toggleContainer u-block u-color-white u-padding-left-s u-padding-top-xxl js-fr-offcanvas-close"
        aria-controls="menu" aria-label="chiudi il menu" title="esci dalla navigazione">
        <span class="Hamburger-toggle is-active">
        </span>
      </button>
    </div>
    <nav>
      {% render '@treeview' %}
    </nav>
  </div>
</div>
